apiVersion: route.openshift.io/v1
kind: Route
metadata:
  name: {{ monitoring.grafana.route_name }}
  namespace: {{ baseline_namespace }}
spec:
  to:
    kind: Service
    name: {{ monitoring.grafana.instance_name }}-service
    weight: 100
  port:
    targetPort: grafana
  tls:
    termination: edge
    insecureEdgeTerminationPolicy: Redirect
  wildcardPolicy: None